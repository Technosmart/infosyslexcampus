def calculate_loan(account_number,salary,account_balance,loan_type,loan_amount_expected,customer_emi_expected):

    eligible_loan_amount=0
    bank_emi_expected=0
    eligible_loan_amount=0
    account_number=str(account_number)
    given_loan_type=loan_type
    if (account_number[0]=='1' and len(account_number)==4 and account_balance >= 100000):
        
        loan_type = ['Business','House','Car']
        eligible_loan_amount = [7500000,6000000,500000]
        bank_emi_expected = [84,60,36]
        if 49999>salary>=25000:
            loan_type= loan_type[2]
            eligible_loan_amount=[eligible_loan_amount[2],2]        #2 is used to keep the list active for max() in if loop below
            bank_emi_expected=[bank_emi_expected[2],2]              #2 is used to keep the list active for max() in if loop below
        elif 74999>salary>=50000:
            loan_type= loan_type[1:2]
            eligible_loan_amount=eligible_loan_amount[1:2]
            bank_emi_expected=bank_emi_expected[1:2]
        elif salary>=75000:
            loan_type= loan_type
            eligible_loan_amount=eligible_loan_amount
            bank_emi_expected=bank_emi_expected
        
        
    
    
    if (given_loan_type not in loan_type) or (salary <25000):
        print("Invalid loan type or salary")
    elif account_number[0]!='1' or len(account_number)!=4:
        print("Invalid account number")
    elif account_balance < 100000:
        print("Insufficient account balance")
    elif (max(eligible_loan_amount)>=loan_amount_expected and max(bank_emi_expected) >= customer_emi_expected):
        print("Account number:", account_number)
        print("The customer can avail the amount of Rs.", eligible_loan_amount[0])
        print("Eligible EMIs :", bank_emi_expected[0])
        print("Requested loan amount:", loan_amount_expected)
        print("Requested EMI's:",customer_emi_expected)
    else:
        print("The customer is not eligible for the loan")
    
    #Start writing your code here
    #Populate the variables: eligible_loan_amount and bank_emi_expected

    #Use the below given print statements to display the output, in case of success
    
    #Use the below given print statements to display the output, in case of invalid data.
    # Also, do not modify the above print statements for verification to work
#Test your code for different values and observe the results
calculate_loan(1005,25000,255000,"Car",300000,30)
